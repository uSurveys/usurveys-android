<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="28dp"
  tools:context=".ui.UserSneakSurveyActivity">

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/question_text"
    style="@style/TextAppearance.MaterialComponents.Headline5"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="28dp"
    android:layout_marginStart="@dimen/standard_side_margin"
    android:layout_marginEnd="@dimen/standard_side_margin"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="What do you think of UserSneak?" />

  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/mc_1"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:layout_marginTop="12dp"
    app:layout_constraintEnd_toEndOf="@id/question_text"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="@id/question_text"
    app:layout_constraintTop_toBottomOf="@id/question_text"
    tools:text="Next" />

  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/mc_2"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:layout_marginTop="8dp"
    app:layout_constraintEnd_toEndOf="@id/question_text"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="@id/question_text"
    app:layout_constraintTop_toBottomOf="@id/mc_1"
    tools:text="Next" />

  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/mc_3"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:layout_marginTop="8dp"
    app:layout_constraintEnd_toEndOf="@id/question_text"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="@id/question_text"
    app:layout_constraintTop_toBottomOf="@id/mc_2"
    tools:text="Next" />

  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/mc_4"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:layout_marginTop="8dp"
    app:layout_constraintEnd_toEndOf="@id/question_text"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="@id/question_text"
    app:layout_constraintTop_toBottomOf="@id/mc_3"
    tools:text="Next" />

  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/mc_5"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:layout_marginTop="8dp"
    app:layout_constraintEnd_toEndOf="@id/question_text"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="@id/question_text"
    app:layout_constraintTop_toBottomOf="@id/mc_4"
    tools:text="Next" />
</androidx.constraintlayout.widget.ConstraintLayout>
